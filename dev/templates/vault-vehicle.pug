extends template/main
append vars
	-
		page_title = 'My Vault'
block content
	main
		section.vault
			.section.home-section
				.breads
					a(href='#').breads-item.-home Home
					span.breads-delim >
					a(href='#').breads-item My Vault
				h5.white-block_title.vault-title
					span My Vault
				.vault-row.row
					.vault-left
						nav.vault-tabs
							button.vault-tab
								| Personal
							button.vault-tab
								| Financial
							button.vault-tab.-active
								| Auto
							button.vault-tab
								| Other
						.vault-left-content
							.vault-accordeon
								.vault-accordeon-item
									.vault-accordeon-item_head.row
										.vault-accordeon-item_img
											svg
												use(xlink:href='/img/sprite.svg#directions_car')
										.vault-accordeon-item_title 2023 Hyundai Elantra
										button.vault-accordeon-item_arr
											svg
												use(xlink:href='/img/sprite.svg#chevron_right')
								.vault-accordeon-item
									.vault-accordeon-item_head.row
										.vault-accordeon-item_img
											svg
												use(xlink:href='/img/sprite.svg#directions_car')
										.vault-accordeon-item_title 2023 Genesis G70
										button.vault-accordeon-item_arr
											svg
												use(xlink:href='/img/sprite.svg#chevron_right')
								.vault-accordeon-item.-show
									.vault-accordeon-item_head.row
										.vault-accordeon-item_img
											svg
												use(xlink:href='/img/sprite.svg#directions_car')
										.vault-accordeon-item_title Vehicle 3
										button.vault-accordeon-item_arr
											svg
												use(xlink:href='/img/sprite.svg#chevron_right')
									.vault-accordeon-item_body
										button.link.-plus
											svg
												use(xlink:href='/img/sprite.svg#add')
											span Add vehicle information
								button.btn.-plus.link(data-click="front:showHalf" data-popup='#license')
									svg
										use(xlink:href='/img/sprite.svg#add')
									span Add new vehicle
					.vault-right
						h3.subtitle What is the Identimaxx vault?
						.vault-img
							img(src='/img/vault.svg')
						h4.subtitle.-little
							| Your own digital lockbox
						p.text.vault-text Safeguard important information and files in your vault, an essential tool for protecting your identity. Documents stored here will be encrypted, but not all of them are not monitored on the dark web.
						.vault-ensure
							.vault-ensure_img
								img(src='/img/ensure.svg')
							.vault-ensure_content
								strong.vault-ensure_title Ensure your safety with Identimaxxâ€™s vault service.
								span.vault-ensure_text The vault serves as your digital lockbox, safeguarding your data and sensitive files with our top-tier encryption.
		script(src='/front.js' type='module')
	.popup-half.-whiteshadow#license
		.popup-half-left
		.popup-half-right
			button.popup-close(data-click="front:closeHalf" data-popup='#license')
				svg
					use(xlink:href='/img/sprite.svg#close')
			.change-method.member-popup.driver
				h5.title-popup.block-title Vehicle 3
				form.change-form
					.change-row
						.inpt.-full
							span.inpt-placeholder VIN Number
							input(type='text' )
					.change-row
						.inpt.-full
							span.inpt-placeholder Title holder
							input(type='text')
					.change-row
						.inpt.-full
							span.inpt-placeholder Make
							input(type='text' placeholder="Name of company that made the car")
					.change-row
						.inpt.-full
							span.inpt-placeholder Model
							input(type='text')
					.change-row
						.inpt.-full
							span.inpt-placeholder Year
							input(type='text')
					.change-row
						.inpt.-full
							span.inpt-placeholder License Plate
							input(type='text')
					.change-buttons
						button.btn.-blue Save
						button.btn Cancel
	include footer-profile

